{% extends 'base.html.twig' %}

{% block title %}Nos magnifique annonce {% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-3">Voici les annonces de nos h√¥tes </h1>
</div>

<div class="row">
    {% for ad in ads %}
    {% set url = path('ads_show',{'slug': ad.slug})  %}
    <div class="col-md-4">
        <div class="car bg-ligth mb-3">
            <div class="card-header text-center">
                {{ ad.rooms }} chambre , <strong> {{ ad.price }}&euro; /nuit</strong><br>
                <small>Pas encore noter</small>
            </div>

            <a href="{{ url }}">
                <img src="{{ ad.coverImage }}" alt="Image de l'appartement"
                    style="heigt: 200px; width: 100%; display: block">
            </a>
            <div class="card-body">
                <h4 class="card-tittle">
                <a href="{{ url }}">
                    {{ ad.title }}
                </a>
                </h4>
                <p class="card-text">
                    {{ ad.introduction }}
                </p>
                <a href="{{ url }}" class="btn btn-secondary">Pour en savoir plus</a>
            </div>
        </div>
    </div>

    {% endfor %}
</div>

{% endblock %}